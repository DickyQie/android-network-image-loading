<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.zq.glidedemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地图片"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SD卡图片"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络图片"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆形图片"
            android:textSize="12sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img1"
            android:layout_width="99dp"
            android:layout_height="99dp"

            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img41"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="椭圆形图片"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初始或错误的图片"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawable加载"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btnng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老式照片(复古)"
            android:textSize="12sp"
            />
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img4"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/imgn"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/imgng"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩小图片显示"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gif图片"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片填充"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img6"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img8"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/img9"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

</LinearLayout>
